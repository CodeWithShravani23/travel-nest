
<% layout("/layouts/boilerplate") %>
<div class="row offset-2">
    <div class="col-8">
<body>
    <br>
    <h2>Create a new listing</h2>
    <br>
   
    <form method="POST" action="/listings">
        <div class="mb-3"><lable for="title" class="form-lable" >Title</lable>
            <input name="listing[title]"  type="text" placeholder="Enter title" class="form-control">
            </div> 
            <div class="mb-3">
                <lable for="description" class="form-lable">Description</lable>
                <textarea name="listing[description]"  class="form-control"></textarea>
            </div>
        
        <div class="mb-3">
            <lable for="image" class="form-lable">Image Link</lable>
            <input name="listing[image]"  type="text"  placeholder="Enter image URL/Link" class="form-control">
        </div>
        
        <div class="row">
            <div class="mb-3 col-md-4" >
                <lable for="price" class="form-lable" >Price</lable>
                    <input name="listing[price]"  type="number" placeholder="1200"  class="form-control">
            </div>
            
            <div class="mb-3 col-md-8" >
                <lable for="country" class="form-lable" >Country</lable>
                <input name="listing[country]" type="text" placeholder="India"  class="form-control">
            </div>
        </div>
       
        
        <div>
            <lable for="location" class="form-lable" >Location</lable>
            <input name="listing[location]"  type="text" placeholder="Jaipur,Rajasthan" class="form-control">
        </div>
        <br>
        <br>
    
        <button class="btn btn-dark new-btn" class="mb-3">Add </button>
        <br>
        <br>

    </form>

</body>
</div>
</div>
