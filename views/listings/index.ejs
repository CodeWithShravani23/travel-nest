
<% layout("/layouts/boilerplate") %>

<body>
  <br>
    <h3>Listings</h3>
    <div class="row row-cols-lg-3 row-cols-md-3 row-cols-sm-3">
        <% for(let listing of allListings) { %>
           <a href="/listings/<%= listing._id %>" class="image-link"> <div class="listing-card col " >
                <img src="<%= listing.image %>" class="card-img-top" alt="listing_image" style="height: 20rem;">
                <div class="card-img-overlay"></div>
                <div class="card-body">
                  <p class="card-text"><b><%= listing.title %></b><br>&#8377;<%= listing.price.toLocaleString("en-IN") %>/night</p>
                </div>
              </div>
              </a>
              <% } %>
    </div>
    


    
</body>

